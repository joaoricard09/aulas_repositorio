        "# Exercício 3: Média de valores digitados até 0\n",
        "\n",
        "valores = []\n",
        "\n",
        "# Recebe valores até o usuário digitar 0\n",
        "while True:\n",
        "    valor = float(input(\"Digite um valor (0 para sair): \"))\n",
        "    if valor == 0:\n",
        "        break\n",
        "    valores.append(valor)\n",
        "\n",
        "# Calcula a média\n",
        "if valores:\n",
        "    media = sum(valores) / len(valores)\n",
        "    print(\"\\nValores digitados:\", valores)\n",
        "    print(\"Média:\", round(media, 2))\n",
        "else:\n",
        "    print(\"Nenhum valor foi digitado.\")"
