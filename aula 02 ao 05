        "# Exercício 5: Variância e Desvio Padrão\n",
        "\n",
        "valores = [35, 37, 36, 34, 38, 35, 37, 37, 33, 36,\n",
        "           38, 37, 35, 37, 34, 33, 37, 36, 35, 38,\n",
        "           36, 35, 36, 37, 38, 39, 37, 37, 36, 37,\n",
        "           33, 37, 35, 37, 39]\n",
        "\n",
        "# Calcula a média\n",
        "soma = 0\n",
        "for v in valores:\n",
        "    soma += v\n",
        "media = soma / len(valores)\n",
        "\n",
        "# Calcula a variância\n",
        "soma_quadrados = 0\n",
        "for v in valores:\n",
        "    soma_quadrados += (v - media) ** 2\n",
        "\n",
        "variancia = soma_quadrados / len(valores)\n",
        "desvio_padrao = variancia ** 0.5\n",
        "\n",
        "# Exibe os resultados\n",
        "print(\"Variância:\", round(variancia, 2))\n",
        "print(\"Desvio Padrão:\", round(desvio_padrao, 2))"
