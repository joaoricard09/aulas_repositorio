        "# Exercício 4: Moda (valor mais frequente)\n",
        "\n",
        "lista = [1, 7, 3, 8, 6, 1, 7, 7, 0, 3, 6, 7, 1, 7,\n",
        "         8, 0, 7, 3, 1, 6, 3, 1, 3, 7, 6, 9, 7, 7,\n",
        "         3, 7, 0, 7, 1, 7, 9]\n",
        "\n",
        "moda = None\n",
        "maior_frequencia = 0\n",
        "\n",
        "# Verifica a frequência de cada número\n",
        "for valor in lista:\n",
        "    contagem = 0\n",
        "    for v in lista:\n",
        "        if v == valor:\n",
        "            contagem += 1\n",
        "    if contagem > maior_frequencia:\n",
        "        maior_frequencia = contagem\n",
        "        moda = valor\n",
        "\n",
        "print(\"Moda:\", moda)\n",
        "print(\"Frequência:\", maior_frequencia)"
      ],
